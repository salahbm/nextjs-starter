{
  "name": "nextjs-boilerplate",
  "version": "0.4.0",
  "private": true,
  "module": "index.ts",
  "type": "module",
  "license": "MIT",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start -p 4000",
    "format": "prettier --write .",
    "lint": "eslint . ",
    "lint:fix": "eslint . --fix",
    "lint:strict": "next lint --max-warnings 0",
    "prettier": "prettier --write .",
    "prepare": "husky",
    "test": "jest",
    "test:watch": "jest --watch",
    "commit": "cz",
    "release": "standard-version",
    "release:dev": "standard-version --prerelease alpha",
    "push": "git add . && bun run commit && bun run release && git push origin $(git branch --show-current) --follow-tags",
    "push:dev": "git add . && bun run commit && bun run release:dev && git push origin $(git branch --show-current) --follow-tags"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@eslint/migrate-config": "^1.3.5",
    "@next/eslint-plugin-next": "^14.2.21",
    "@radix-ui/react-icons": "^1.3.2",
    "@types/jest": "^29.5.14",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.446.0",
    "momenti-eslint": "^1.2.7",
    "next": "^15.1.2",
    "next-intl": "^3.26.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "sass": "^1.83.0",
    "sharp": "^0.33.5",
    "tailwind-merge": "^2.5.5",
    "tailwindcss-animate": "^1.0.7",
    "zustand": "^5.0.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@eslint/compat": "^1.2.4",
    "@eslint/js": "^9.17.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/bun": "latest",
    "@types/node": "^20.17.10",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "add": "^2.0.6",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.1.7",
    "install": "^0.13.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.2.11",
    "postcss": "^8.4.49",
    "prettier-plugin-tailwindcss": "^0.6.9",
    "standard-version": "^9.5.0",
    "tailwindcss": "^3.4.17",
    "ts-node": "^10.9.2",
    "typescript": "5.5.4"
  }
}
